{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 60000,
      "headless": true,
      "iso_checksum": "cb9d89a5496e4999079e9d030d78e03447ba8da4860df7e0a86b6e0c2ac1073495f7e8e4ea58cb5cf6f2c0ff4ed2fbd8a2d6fbcb00b15656bba67bc0ced46720",
      "iso_checksum_type": "sha512",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "20s",
      "type": "qemu",
      "qemuargs": [
        [ "-cpu", "host" ],
        [ "-m", "16384M" ],
        [ "-smp"," 4",",sockets=4",",cores=1",",threads=1" ]
      ],
      "vm_name": "Gentoo"
    }
  ],
  "description": "Faithful Stage 3 Gentoo Installation (VirtualBox)",
  "post-processors": [
    {
      "output": "gentoo-amd64-stage3-qemu.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=qemu",
        "SCRIPTS=/tmp",
        "_TARBALL={{user `tarball`}}",
        "_TARBALL_URL={{user `tarball_url`}}"
      ],
      "scripts": [
        "provision.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "password": "packer",
    "stage3": "20180415T214502Z",
    "username": "root",
    "tarball": "",
    "tarball_url": ""
  }
}

